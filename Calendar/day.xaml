<UserControl x:Class="Calendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             mc:Ignorable="d"
             MinHeight="150"
             MaxHeight="150"
             MouseDown="MouseClicked"
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="72*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="dayNum" Text="1" FontSize="20" TextAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="image" Grid.Row="1" Source="/img/6324674.png" Margin="12"/>
    </Grid>
</UserControl>
